<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Apotheca</display-name>
  <description>description</description>
  <context-param>
  	<description>my param</description>
  	<param-name>my.param.ABC</param-name>
  	<param-value>3</param-value>
  </context-param>
	<listener>
		<description>my listener</description>
		<display-name>qwerty</display-name>
		<listener-class>com.epam.jwd.apotheca.controller.MyContextListener</listener-class>
	</listener>
	<listener>
		<description>my listener2</description>
		<display-name>asdf</display-name>
		<listener-class>com.epam.jwd.apotheca.controller.MyContextAttributeListener</listener-class>
	</listener>
 <servlet>
 	<servlet-name>ABC</servlet-name>
 	<servlet-class>com.epam.jwd.apotheca.controller.UserManager</servlet-class>
 </servlet>
 <servlet>
 	<servlet-name>drug</servlet-name>
 	<servlet-class>com.epam.jwd.apotheca.controller.DrugManager</servlet-class>
 </servlet>
 <servlet-mapping>
 	<servlet-name>ABC</servlet-name>
 	<url-pattern>/aaa</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
 	<servlet-name>drug</servlet-name>
 	<url-pattern>/createDrug</url-pattern>
 </servlet-mapping>
 <filter>
 	 <filter-name>log</filter-name>
 	 <filter-class>com.epam.jwd.apotheca.controller.LogFilter</filter-class>
 </filter>
  <filter>
 	 <filter-name>terminal</filter-name>
 	 <filter-class>com.epam.jwd.apotheca.controller.TerminalFilter</filter-class>
 </filter>
 <filter>
 	 <filter-name>last</filter-name>
 	 <filter-class>com.epam.jwd.apotheca.controller.LastFilter</filter-class>
 </filter>
 <filter>
 	<filter-name>auth</filter-name>
 	<filter-class>com.epam.jwd.apotheca.controller.AuthorizationFilter</filter-class>
 </filter>
 <filter-mapping>
 	<filter-name>auth</filter-name>
 	<url-pattern>/secure/*</url-pattern>
 </filter-mapping>
 <filter-mapping>
 	<filter-name>log</filter-name>
 	<url-pattern>/*</url-pattern>
 </filter-mapping>
  <filter-mapping>
 	<filter-name>terminal</filter-name>
 	<url-pattern>/term/*</url-pattern>
 </filter-mapping>
 <filter-mapping>
 	<filter-name>last</filter-name>
 	<url-pattern>/*</url-pattern>
 </filter-mapping>
 <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>